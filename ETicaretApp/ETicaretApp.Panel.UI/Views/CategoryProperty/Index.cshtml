@model IEnumerable<CategoryProperty>

@{
    ViewData["Title"] = "Kategori Özellik Listesi";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Kategori Özellik Listesi</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Kategori Özellik Listesi</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->



        <div class="row">
            <div class="col-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-6">
                                <a class="btn btn-light btn-sm text-dark" onclick="openCreateModal('CategoryProperty')">Yeni Kategori Özelliği Oluştur</a>
                            </div>
                            <div class="col-6 text-right">
                                <form asp-action="Index" class="d-flex">
                                    <div class="ml-auto">
                                        <select class="form-control select2" name="categoryId" onchange="submitForm()">
                                            <option value="0">Hepsini listele</option>
                                            @foreach (var item in (IEnumerable<SelectListItem>)ViewData["Category"])
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-secondary bg-gradient-secondary ml-2">Getir</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <th>Adı</th>

                                    <th width="80px"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.Property</td>

                                        <td>
                                            <a onclick="openDeleteModal('CategoryProperty', @item.Id)" class="btn btn-danger btn-sm" title="Kaydı Sil"><i class="fa fa-trash"></i></a>
                                            <a onclick="openEditModal('CategoryProperty', @item.Id)" class="btn btn-warning btn-sm" title="Kaydı Güncelle"><i class="fa fa-edit"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>


            <!-- /.card-body -->
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>

<vc:modal modal-id="modalCategoryPropertyCreate" header-text="Kategori Özelliği Oluştur" form-id="formCategoryPropertyCreate" button-text="Kaydet" button-onclick="" button-type="submit" button-class="primary" detail-div-id="divCreateModalDetail"></vc:modal>

<vc:modal modal-id="modalCategoryPropertyEdit" header-text="Kategori Özelliği Güncelle" form-id="formCategoryPropertyEdit" button-text="Kaydet" button-onclick="" button-type="submit" button-class="primary" detail-div-id="divEditModalDetail"></vc:modal>

<vc:modal modal-id="modalCategoryPropertyDelete" header-text="Kategori Özelliği Sil" form-id="formCategoryPropertyDelete" button-text="Sil" button-onclick="" button-type="submit" button-class="danger" detail-div-id="divDeleteModalDetail"></vc:modal>

