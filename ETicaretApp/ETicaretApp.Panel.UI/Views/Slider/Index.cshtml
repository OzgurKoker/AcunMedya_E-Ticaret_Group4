@model IEnumerable<Slider>

@{
    ViewData["Title"] = "Slayt Listesi";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Slayt Listesi</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Slayt Listesi</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->



        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <a class="btn btn-primary btn-sm" onclick="openCreateModal('Slider')">Yeni Fotoğraf Ekle</a>


                        <div class="card-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <th>Fotoğraf  </th>
                                    <th>Küçük Başlık  </th>
                                    <th>Ana Başlık  </th>
                                    <th>Url </th>

                                    <th width="80px"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            <div class="user-block" style="width: 80px !important; height: 80px !important;">
                                                <img class="img-md" src="~/img/Slider/@item.Image" alt="Slayt Image" style="width: 80px !important; height: 80px !important;">
                                            </div>
                                        </td>
                                        <td>@item.SmallTittle</td>  
                                        <td>@item.MainTittle</td>
                                        <td>@item.Url</td>

                                        <td>
                                            <a onclick="openDeleteModal('Slider', @item.Id)" class="btn btn-danger btn-sm" title="Kaydı Sil"><i class="fa fa-trash"></i></a>
                                            <a onclick="openEditModal('Slider', @item.Id)" class="btn btn-warning btn-sm" title="Kaydı Güncelle"><i class="fa fa-edit"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>


            <!-- /.card-body -->
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>

<vc:modal modal-id="modalSliderCreate" header-text="Slayt Oluştur" form-id="formSliderCreate" button-text="Kaydet" button-onclick="" button-class="primary" button-type="submit" detail-div-id="divCreateModalDetail"></vc:modal>

<vc:modal modal-id="modalSliderEdit" header-text="Slayt Güncelle" form-id="formSliderEdit" button-text="Kaydet" button-onclick="" button-class="primary" button-type="submit" detail-div-id="divEditModalDetail"></vc:modal>

<vc:modal modal-id="modalSliderDelete" header-text="Slayt Sil" form-id="formSliderDelete" button-text="Sil" button-onclick="" button-class="danger" button-type="submit" detail-div-id="divDeleteModalDetail"></vc:modal>

